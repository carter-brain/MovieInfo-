<%-include("partials/header")-%>
<style>
    .h1-div {
        width: 100vw;
        height: 100vh;
      color: wheat;
    }

    h1 {
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size: 50px;
        position: absolute;
        top: 45%;
        left: 50%;
        transform: translateX(-50%);
        color: deepskyblue;
    }

    
    .btn-try {background-image: linear-gradient(to right, #ffb347 0%, #ffcc33  51%, #ffb347  100%)}
     .btn-try {
        margin: 10px;
        padding: 15px 45px;
        text-align: center;
        text-transform: uppercase;
        transition: 0.5s;
        background-size: 200% auto;
        color: white;            
        box-shadow: 0 0 5px #eee;
        border-radius: 10px;
        position: absolute;
        top: 60%;
        left: 50%;
        transform: translateX(-50%);
        border: none;
        outline: none;
        cursor: pointer;
      }
      .btn-try:hover {
        background-position: right center; /* change the direction of the change here */
        color: #fff;
        text-decoration: none;
      }
     
</style>
<div class="h1-div">
    <h1>Movie Not Found</h1>
    <form action="/search" method="POST"><button class= "btn-try">Try other movie</button></form>
</div>
<%-include("partials/footer")-%>